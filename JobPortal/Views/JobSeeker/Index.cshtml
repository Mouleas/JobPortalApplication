@{
}



@model List<JobViewModel>

<style>
    table {
        text-align: center;
    }

    .head {
        display: flex;
        justify-content: space-between;
    }

        .head a {
            float: right;
        }
</style>

<div class="head">
    <h3>Job List</h3>
</div>

<hr></hr>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td><b>Role</b></td>
            <td><b>Salary</b></td>
            <td><b>Company Name</b></td>
            <td><b>Location</b></td>
        </tr>
    </thead>

    <tbody>
        @foreach (JobViewModel obj in Model)
        {
            <tr>
                <td>@obj.title</td>
                <td>@obj.salary</td>
                <td>@obj.company.location</td>
                <td>@obj.company.name</td>
                <td>
                    <a class="btn btn-warning" href="/Admin/job?id=@obj.id">Apply Job</a>&nbsp;&nbsp;
                </td>
            </tr>
        }
    </tbody>


</table>

