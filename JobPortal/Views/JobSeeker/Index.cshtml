@{
}



@model List<JobViewModel>

<style>
    table {
        text-align: center;
    }

    .head {
        display: flex;
        justify-content: space-between;
    }

        .head a {
            float: right;
        }
</style>

<div class="container">
    
    <div class="row">
        <div class="col-12">
            <h1>List of Jobs</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-10">
            <form class="form-inline" method="post">
                <input class="form-control mr-sm-2" type="search" name="search" placeholder="Search" aria-label="Search">
                <a type="submit "class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</a>
            </form>
        </div>
    </div>
<hr></hr>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td><b>Role</b></td>
            <td><b>Salary</b></td>
            <td><b>Company Name</b></td>
            <td><b>Location</b></td>
        </tr>
    </thead>

    <tbody>
        <tr>
            <form method="POST">

                <td> <input class="form-control mr-sm-2" type="search" name="role" placeholder="Search ROle" aria-label="Search"></td>
                <td> <input class="form-control mr-sm-2" type="search" name="salary" placeholder="Search Salary" aria-label="Search"></td>
                <td> <input class="form-control mr-sm-2" type="search" name="company" placeholder="Search Company" aria-label="Search"></td>
                <td> <input class="form-control mr-sm-2" type="search" name="location" placeholder="Search Location" aria-label="Search"></td>
                <td>
                    <button type="submit" asp-action="Index" asp-controller="JobSeeker" class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
                    <button asp-action="Index" asp-controller="JobSeeker" class="btn btn-primary my-2 my-sm-0" >Reset</button>

                </td>

            </form>
        </tr>
        @foreach (JobViewModel obj in Model)
        {
            <tr>
                <td>@obj.title</td>
                <td>@obj.salary</td>
                <td>@obj.company.location</td>
                <td>@obj.company.name</td>
                <td>
                    <a class="btn btn-warning" >Apply Job</a>&nbsp;&nbsp;
                </td>
            </tr>
        }
    </tbody>


</table>

</div>