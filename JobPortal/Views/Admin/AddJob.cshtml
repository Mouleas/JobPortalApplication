@{
}

@model List<CompanyViewModel>


<h1>Add Job</h1>

<form  method="post">

    <div class="row mb-3">
        <input type="hidden" value="@(ViewData["id"])" name="id"/>
        <label class="col-sm-12 col-form-label">Job Title</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" name="title" required />
        </div>
        <label class="col-sm-12 col-form-label">Salary</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" name="salary" required />
        </div>
        
    </div>
    <button type="submit" asp-action="AddJobToTable" class="btn btn-success">Add</button>
    <a class="btn btn-danger" href="/Admin/job?id=@(ViewData["id"])">Cancel</a>
</form>

